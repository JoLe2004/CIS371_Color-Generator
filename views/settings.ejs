<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Paletteable</title>
    <link rel="stylesheet" href="/styles.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>
<body>
    <%- include('navbar') %>
    
    <% if (message) { %>
        <h1 style="display: flex; justify-content: center; color: white; margin-bottom: 2em"><%= message %></h1>
    <% } %>
    
    <div class="settings-page">
        <div class="user-info">
            <form action="/settings" method="POST">
                <h1 style="margin: 0.5em">Username</h1>
                <input class="login-input" type="text" name='username' value="<%= user.username %>" style="margin: 0;"/>
                <h1 style="margin: 0.5em; margin-top: 1.5em;">Password</h1>
                <input class="login-input" type="text" name='password' value="<%= user.password %>" style="margin: 0; margin-bottom: 1.75em;"/>
                <button type="submit" style="margin-top: 3em; margin-left: 1.33em;">Update Settings</button>
            </form>
            <button onclick="location.href='/logout'" class="logout-button" style="margin-left: 1.33em;">Logout</button>
            <form action="/settings?_method=DELETE" method="POST">
                <button type="submit" style="margin-left: 1.33em;">Delete Account</button>
            </form>
        </div>
    </div>
    
    <script>
        const navbar = document.getElementById('navbar');
        function toggleSidebar() {
            navbar.classList.toggle("show")
        }
    </script>
</body>
</html>