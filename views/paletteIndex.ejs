<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Paletteable</title>
    <link rel="stylesheet" href="/styles.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>
<body>
    <%- include('navbar') %>

    <% if (palettes.length === 0) { %>
            <h2 style="justify-self:center; margin-top: 15em;">No Palettes Saved</h2>
    <% } %>
    <div id="content-container">
        <% palettes.forEach(palette => { %>
            <div class="palette">
                <h2><%= palette.name %></h2>
                <div id="main-container">
                    <% palette.colors.forEach(color => { %>
                        <div class="color-container">
                            <div class="color" style="background-color: <%= color %>"><div class="color-text"><%= color %></div></div>
                            <div class="row">
                                <span class="hexcode"><%= color %></span>
                            </div>
                        </div>
                    <% }) %>
                </div>
                <button onclick="location.href='/palette/<%= palette._id %>'" style="margin-bottom: 5em;">Edit</button>
            </div>
        <% }) %>
    </div>    
    <script>
        const navbar = document.getElementById('navbar');
        function toggleSidebar() {
            navbar.classList.toggle("show")
        }
    </script>
</body>
</html>
