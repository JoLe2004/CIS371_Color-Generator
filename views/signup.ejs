<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Paletteable</title>
    <link rel="stylesheet" href="/styles.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>
<body>
    <%- include('navbar') %>
    
    <div class="login-container">
        <% if (message) { %>
            <h1 style="display: flex; justify-content: center; color: white; margin-bottom: 2em"><%= message %></h1>
        <% } %>
        <div class="glass-container">
            <div class="login-box">
                <h2 class="login-text">Register</h2>
                <form action="/signup" accept-charset="UTF-8" method="post">
                    <input class="login-input" type="text" name='username' required placeholder="Username"/>
                    <input class="login-input" type="text" name='password' required placeholder="Password"/>
                    <button class="login-button" type="submit">Create Account</button>
                </form>
            </div>
        </div>
    </div>

    <script>
        const navbar = document.getElementById('navbar');
        function toggleSidebar() {
            navbar.classList.toggle("show")
        }
    </script>
</body>
</html>
